# API Configuration
API_URL="https://tug-backend.onrender.com"

# MongoDB Connection
# For production, use mongodb+srv:// connection string with credentials
# For local development, use: mongodb://localhost:27017
MONGODB_URL="mongodb://localhost:27017"
MONGODB_DB_NAME=tug

# GitHub Integration (optional)
GITHUB_ACCESS_TOKEN=your_github_token_here

# Docker Hub (for CI/CD)
DOCKERHUB_USERNAME=your_dockerhub_username
DOCKERHUB_TOKEN=your_dockerhub_token

# Grafana Dashboard
GRAFANA_PASSWORD=your_secure_grafana_password

# Strava API Integration
STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret

# RevenueCat
# Use your RevenueCat public SDK key that starts with "pk_"
# Note: Do NOT use App Store Connect keys that start with "appl_"
REVENUECAT_API_KEY=pk_your_revenuecat_public_sdk_key

# RevenueCat Offering ID (e.g. "standard")
REVENUECAT_OFFERING_ID=standard

# RevenueCat Entitlement ID for premium features
REVENUECAT_PREMIUM_ENTITLEMENT_ID=tug_pro