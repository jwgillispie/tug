{
  "security": {
    "ignore-cvss-severity-below": 7.0,
    "ignore-cvss-unknown-severity": false,
    "continue-on-vulnerability-error": false,
    "audit-and-monitor": true,
    "auto-security-updates": false
  },
  "alert": {
    "ignore-unpinned-requirements": false,
    "ignore-environment-results": false
  },
  "ignore": {
    "vulnerabilities": [
      {
        "id": 0,
        "reason": "Example: This vulnerability is not applicable to our use case",
        "expires": "2024-12-31"
      }
    ],
    "packages": [
      {
        "name": "",
        "version": "",
        "reason": "Example: Package exclusion with reason",
        "expires": "2024-12-31"
      }
    ]
  },
  "report": {
    "output-format": "json",
    "include-license": true,
    "include-security": true,
    "include-audit": true
  },
  "policy-file-version": "2.0"
}